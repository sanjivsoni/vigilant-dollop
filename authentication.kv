<SignupScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20

        canvas:
            Rectangle: 
                source: 'images/blue.png'
                pos: self.pos
                size: self.size
        

        BoxLayout:
            orientation: 'vertical'

            Button:
                text:'back'
                size_hint:0.10,0.05
                on_press: root.manager.current = 'main'

            BoxLayout:
                size_hint: 1, 0.1    
                ProgressBar:
                    id: bar
                    max: 1300
                    value:0
            ScrollView:
                size_hint: (1, 1)
                pos_hint:{'center_x': .5, 'center_y': .5}
                do_scroll_x:False

                GridLayout: 
                    id: layout
                    cols:2
                    padding: 10
                    spacing: 10
                    height: self.minimum_height        
                    size_hint_y:  None
                    TextInput:
                        id: 1
                        hint_text: "User Name"
                        multiline: False
                        size_hint: None, None
                        size: 350,40
                        focus:True
                        cursor_color: 0,0,0,1
                        on_text: root.val_change()
                        pos_hint: {'center_x':.30, 'y':0}
                    Label:
                    TextInput:
                        id: 2
                        hint_text: "Password"
                        password: True
                        multiline: False
                        allow_copy: False
                        size_hint: None, None
                        size: 350,90
                        focus:True
                        cursor_color: 0,0,0,1
                        on_text: root.pass_work()
                    Label:
                        id: MSG
                        text: " "
                        size: 350,90
                        multiline: True
                    TextInput:
                        id: 3
                        focus:True
                        hint_text: "Confirm Password"
                        password: True
                        multiline: False     
                        allow_copy: False
                        size_hint: None, None
                        size: 350,40
                        allow_copy: False
                        cursor_color: 0,0,0,1
                        on_text: root.conf_work()
                    Label:
                        id: MSG2
                        text: " "
                    TextInput:
                        id: 4
                        focus: True
                        hint_text: 'E-Mail'
                        multiline: False
                        size_hint: None, None
                        size: 350,40
                        cursor_color: 0,0,0,1
                        on_text: root.val_change()
                    Label:
                        id: MSG3
                        text: " "
                    TextInput:
                        id: 5
                        focus:True
                        hint_text: 'Contact No.' 
                        height:400
                        multiline: False
                        size_hint: None, None
                        size: 350,40
                        cursor_color: 0,0,0,1
                        on_text: root.val_change()
                    Label:
                    TextInput:
                        id: 6
                        hint_text: 'D.O.B.'
                        multiline: False
                        size_hint: None, None
                        size: 350,40
                        cursor_color: 0,0,0,1
                        on_text: root.val_change()
                    Label:
                    TextInput:
                        id: 7
                        hint_text: 'Country'
                        multiline: False
                        size_hint: None, None
                        size: 350,40
                        cursor_color: 0,0,0,1
                        on_text: root.val_change()
                    Label:
                    TextInput:
                        id: 8
                        hint_text: 'Address'
                        multiline: True
                        cursor_color: 0,0,0,1
                        size_hint: None, None
                        size: 350,80
                        on_text: root.val_change()
                    Label:
                    TextInput:
                        id: 9
                        hint_text: 'Pin Code'
                        multiline: False
                        size_hint: None, None
                        size: 350,40
                        cursor_color: 0,0,0,1
                        on_text: root.val_change()
                    Label:
                    TextInput:
                        id: 10
                        hint_text: 'SSN'
                        multiline: False
                        size_hint: None, None
                        size: 350,40
                        cursor_color: 0,0,0,1
                        on_text: root.val_change()
                    Label:
                    TextInput:
                        id: 11
                        hint_text: 'SSN Type'
                        multiline: False
                        size_hint: None, None
                        size: 350,40
                        cursor_color: 0,0,0,1
                        on_text: root.val_change()
                    Label:
                    Spinner:
                        background_color: 255,255,255,1
