<HomeScreen>:
    BoxLayout:
    # Double as a Tabbed Panel Demo!
    TabbedPanel:
        tab_pos: "top_right"
        default_tab_text: "Unlock Files"
        default_tab_content: list_view_tab

        TabbedPanelHeader:
            text: 'Lock Files'
            content: icon_view_tab

        FileChooserListView:
            id: list_view_tab

        FileChooserIconView:
            id: icon_view_tab
            show_hidden: True

