<UsernameScreen>:
    username: username
    message: message
    
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10
    
        canvas:
            Rectangle: 
                source: 'images/blue.png'
                pos: self.pos
                size: self.size

        BoxLayout:
            size_hint: 1,0.25
            orientation: 'vertical'
            Button:
                text:'back'
                size_hint:0.10,0.2
                on_press: root.manager.current = 'main'

            Label:
                size_hint:0.10,0.8
      
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1,0.25
            spacing: 10
 
            BoxLayout:
                size_hint: 0.3,0.5
            BoxLayout:
                size_hint: 0.5,0.7
            
                BoxLayout:
                    orientation: 'vertical'
                    spacing: 10
                    Label:
                        id: message

                    TextInput:
                        id: username
                        hint_text: 'username'
                    
                    BoxLayout:
                        orientation: 'horizontal'
                        Button:
                            id: loginButton
                            text: 'Next'
                            on_release: root.usernameEvent()
                        Button:
                            id: recoverButton
                            text: 'Recover Username'
                            on_release: root.recoverUsernameEvent()

            BoxLayout:
                size_hint: 0.3,0.5                
        BoxLayout:
            size_hint:1,0.25
        BoxLayout:
            size_hint:1,0.25

