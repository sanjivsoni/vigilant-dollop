                        size: 350,40
                    Label:
                    TextInput:
                        id: 12
                        hint_text: 'Answer'
                        multiline: False
                        size_hint: None, None
                        size: 350,40
                        cursor_color: 0,0,0,1
                        on_text: root.val_change()
                    Label:
