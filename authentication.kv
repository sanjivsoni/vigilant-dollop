			BoxLayout:
				size_hint: 1,0.9
				orientation: 'horizontal'
				BoxLayout:
					orientation: 'horizontal'
					size_hint: 0.25,1
				BoxLayout:
					orientation: 'horizontal'
					size_hint: 0.5,0.24 
					
					TextInput:
						id: otp
						size_hint: 0.2,1
						font_size: '50sp'
						padding:15,5,15,0
						write_tab: False
					TextInput:
						size_hint: 0.2,1
