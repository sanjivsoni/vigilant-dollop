						padding:15,5,15,0
						write_tab: False
					TextInput:
						size_hint: 0.2,1
						font_size: '50sp'
						padding:15,5,15,0
						write_tab: False
					TextInput:
						size_hint: 0.2,1
						font_size: '50sp'
						padding:15,5,15,0
						write_tab: False
					TextInput:
						size_hint: 0.2,1
						font_size: '50sp'
						padding:15,5,15,0
						write_tab: False
					TextInput:
						size_hint: 0.2,1
						font_size: '50sp'
						padding:15,5,15,0
						write_tab: False
				BoxLayout:
					size_hint: 0.25,1
				
			BoxLayout:
				size_hint: 1,0.8
				orientation: 'horizontal'
				BoxLayout:
					size_hint: 1,0.25
				BoxLayout:
					size_hint: 1,0.25
					orientation: 'horizontal'
					Label:
						id: minutes
						font_size: '90sp'
