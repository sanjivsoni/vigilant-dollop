<SignupScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20

        
        
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1,0.25

            Label:
                text: 'Vigilant Dollop'
                font_size: '15sp'
                size_hint: 1, 0.20 
        

            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, 0.1

                Button: 
                    id: login_button
                    text: 'Sign Up'
                    font_size: '15sp'
                    on_release: root.manager.current = 'signup'

                Button: 
                    id: login_button
                    text: 'Login'
                    font_size: '15sp'
                    on_release: root.manager.current = 'login'

                Button: 
                    id: login_button
                    text: 'Recover'
                    font_size: '15sp'

                Button: 
                    id: login_button
                    text: 'Reset'
                    font_size: '15sp'

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1,0.75

            BoxLayout:
                size_hint: 1, 0.1    
                ProgressBar:
                    id: bar
                    max: 1100
                    value:0
            ScrollView:
                size_hint: (1, 1)
                pos_hint:{'center_x': .5, 'center_y': .5}
                do_scroll_x:False

                GridLayout: 
                    id: layout
                    cols:1
                    spacing:60
                    height: self.minimum_height        
                    size_hint_y:  None
                    BoxLayout:
                        Label:
                            text: ""
                            size_hint: None, None
                            size: 350,40
                    BoxLayout:
                        Label:
                            id: L7
                            size_hint: .5, None
                            size: 350,40
                            text: "First Name "
                        TextInput:
                            id: 7
                            hint_text: 'Eg:- John'
                            multiline: False
                            focus:True
                            size_hint: .6, None
                            size: 350,40
                            cursor_color: 0,0,0,1
                            on_text: root.name_work()  
                            write_tab: False
                            
                        Label:
                            id: MSG4
                            text: " "
                    BoxLayout:
                        Label:
                            id: L8
                            size_hint: .5, None
                            size: 350,40
                            text: "Last Name "
                        TextInput:
                            id: 8
                            hint_text: 'Eg:- Doe'
                            multiline: False
                            focus:True
                            size_hint: .6, None
                            size: 350,40
                            cursor_color: 0,0,0,1
                            on_text: root.Lname_work()  
                            write_tab: False
                        Label:
                    BoxLayout:
                        Label:
                            id: L1
                            size_hint: .5, None
                            size: 350,40
                            text: "User ID"
                        TextInput:
                            id: 1
                            hint_text: 'Eg:- johndoe03; Length(8-16)'
                            multiline: False
                            focus:True
                            size_hint: .6, None
                            size: 350,40
                            cursor_color: 0,0,0,1
                            on_text: root.uid_work()  
                            write_tab: False
                        Label:
                            
                    BoxLayout:
                        Label:
                            id: L2
                            size_hint: .5, None
                            size: 350,40
                            text: "Password " 
                        TextInput:
                            id: 2
                            size_hint: .6, None
                            size: 350,40
                            cursor_color: 0,0,0,1
                            focus:True
                            hint_text: "Password"
                            password: True
                            multiline: False     
                            allow_copy: False
                            on_text: root.pass_work()
                            write_tab: False
                        Label:
                            id: MSG
                            text: " "
                    BoxLayout:
                        Label:
                            id: L3
                            size_hint: .5, None
                            size: 350,40
                            text: "Confirm Password " 
                        TextInput:
                            id: 3
                            size_hint: .6, None
                            size: 350,40
                            cursor_color: 0,0,0,1
                            focus:True
                            hint_text: "Confirm Password"
                            password: True
                            multiline: False     
                            allow_copy: False
                            on_text: root.conf_work()
                            write_tab: False
                        Label:
                            id: MSG2
                            text: " "
                    BoxLayout:
                        Label:
                            id: L4
                            size_hint: .5, None
                            size: 350,40
                            text: "E-Mail " 
                        TextInput:
                            id: 4
                            focus: True
                            hint_text: 'xyz@domain.com'
                            multiline: False
                            size_hint: .6, None
                            size: 350,40
                            cursor_color: 0,0,0,1
                            on_text: root.mail_work()
                            write_tab: False
                        Label:
                            id: MSG3
                            text: " "
                    BoxLayout:
                        Label:
                            id: L5
                            size_hint: .5, None
                            size: 350,40
                            text: "Contact No. " 
                        TextInput:
                            id: 5
                            focus:True
                            hint_text: 'Eg:- 9999999999' 
                            height:400
                            multiline: False
                            size_hint: .6, None
                            size: 350,40
                            cursor_color: 0,0,0,1
                            on_text: root.cont_work()
                            write_tab: False
                        Label:
                            text: " "
                    BoxLayout:
                        Label:
                            id: L6
                            size_hint: .5, None
                            size: 350,40
                            text: "D.O.B. " 
                        TextInput:
                            id: 6
                            hint_text: 'dd/mm/yyyy'
                            multiline: False
                            size_hint: .6, None
                            size: 350,40
                            cursor_color: 0,0,0,1
                            on_text: root.valiDate()
                            write_tab: False
                        Label: 
                            id: MSG5
                            text: " "
                    BoxLayout:
                        Label:
                            id: L10
                            size_hint: .5, None
                            size: 350,40
                            text: "SSN Type" 
                        Spinner:
                            id: 10
                            background_color: 255,255,255,1
                            color: 0,0,0,1
                            text: "SSN Type"
                            values: "Voter ID", "PAN Card", "Aadhaar Card", "Driver's License"
                            size_hint: .6, None
                            size: 350,40
                        Label:
                    BoxLayout:
                        Label:
                            id: L11
                            size_hint: .5, None
                            size: 350,40
                            text: "SSN " 
                        TextInput:
                            id: 11
                            hint_text: 'SSN'
                            multiline: False
                            size_hint: .6, None
                            size: 350,40
                            cursor_color: 0,0,0,1
                            on_text: root.ssn()
                            write_tab: False
                        Label:
                    BoxLayout:
                        Label:
                            size_hint: .5, None
                            size: 350,40
                            text: "Security Question 1 " 
                            id: LY
                        Spinner:
                            background_color: 255,255,255,1
                            id: Y
                            color: 0,0,0,1
                            text: "Security Question"
                            values: "Mother's Maiden Name ?", "Pet's Name ?", "First Teacher's Name ?", "Favourite Holiday Destination?"
                            size_hint: .6, None
                            size: 350,40
                        Label:
                    BoxLayout:
                        Label:
                            id: L12
                            size_hint: .5, None
                            size: 350,40
                            text: "Answer  " 
                        TextInput:
                            id: 12
                            hint_text: 'Answer'
                            multiline: False
                            size_hint: .6, None
                            size: 350,40
                            cursor_color: 0,0,0,1
                            on_text: root.ans1()
                            write_tab: False
                        Label:
                    BoxLayout:
                        Label:
                            size_hint: .5, None
                            size: 350,40
                            text: "Security Question 2 " 
                        Spinner:
                            id: X
                            background_color: 255,255,255,1
                            color: 0,0,0,1
                            text: "Security Question"
                            values: "Your Childhood Hero?", "Time Of The Day Were You Born ?", "The steet you grew up in?", "Your Childhood Nickname?"
                            size_hint: .6, None
                            size: 350,40
                        Label:
                    BoxLayout:
                        Label:
                            id: L13
                            size_hint: .5, None
                            size: 350,40
                            text: "Answer " 
                        TextInput:
                            id: 13
                            hint_text: 'Answer'
                            multiline: False
                            size_hint: .6, None
                            size: 350,40
                            cursor_color: 0,0,0,1
                            on_text: root.ans2()  
                            write_tab: False  
                        Label:

                    BoxLayout:
                        Label:
                            text: "Answer " 

                            size_hint: .5, None
                            size: 350,40                          
                        Image:
                            source: 'images/22.jpg'
                            pos: self.pos
                            size: self.size
                        Label:
                    
                    BoxLayout:
                        Label:
                            size_hint: .5, None
                            size: 350,40
                        Button:
                            text: 'Submit'
                            size_hint: .6, None
                            size: 350,40
                            on_press: root.buttonAction()
                        Label:


